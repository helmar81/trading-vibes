<style>
  footer {
    padding: 2em 1em 4em;
    background: linear-gradient(var(--gray-gradient));
    color: rgb(var(--gray));
    text-align: center;
    font-size: 0.9rem;
  }

  .footer-nav {
    margin-bottom: 1em;
    display: flex;
    justify-content: center;
    gap: 1.5em;
    flex-wrap: wrap;
  }

  .footer-nav a,
  footer a {
    color: rgb(var(--gray));
    text-decoration: none;
    font-weight: 500;
  }

  .footer-nav a:hover,
  footer a:hover {
    color: rgb(var(--gray-dark));
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5em;
    margin-top: 1.2em;
  }

  .social-links svg {
    transition: transform 0.2s ease;
  }

  .social-links a:hover svg {
    transform: scale(1.1);
  }
</style>
